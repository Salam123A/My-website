{
  "version": 2,
  "builds": [
    {
      "src": "server.js",  // Your main server file
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",  // Serve static files from /public
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",  // All other routes go to server.js
      "dest": "server.js"
    }
  ]
}
